{% extends 'base.html.twig' %}

{% block title 'Contact - My Esprit Zen' %}

{% block body %}

    <!-- ##### Google Map ##### -->
    <div class="map-area">
        <div id="googleMap" class="googleMap"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2653.3723560716467!2d2.095344615655246!3d48.31492157923786!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e5b48be279bfb7%3A0x482ad22d0e98efb!2sMy+Esprit+Zen!5e0!3m2!1sfr!2sfr!4v1562062234686!5m2!1sfr!2sfr" width="100%" height="600" frameborder="0" style="border:0" allowfullscreen></iframe></div>
    </div>

    <!-- ##### Contact Area Start ##### -->
    <section class="contact-area section-padding-100">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Contact Form Area -->
                <div class="col-12 col-md-10 col-lg-9">
                    <div class="contact-form">
                        <h5>Contact</h5>
                        <!-- Contact Form -->
                        <form action="#" method="post">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="group">
                                        <input type="text" name="name" id="name" required>
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>Nom</label>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="group">
                                        <input type="email" name="email" id="email" required>
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>Email</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="group">
                                        <input type="text" name="subject" id="subject" required>
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>Objet</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="group">
                                        <textarea name="message" id="message" required></textarea>
                                        <span class="highlight"></span>
                                        <span class="bar"></span>
                                        <label>Message</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn original-btn">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-12 col-md-10 col-lg-3">
                    <div class="post-sidebar-area">
                        <!-- Widget Area -->
                        <div class="sidebar-widget-area">
                            <h1 class="title subscribe-title">Infos</h1>
                            <hr style="border-top: 1px solid black;">
                        </div>

                        <!-- Widget Area -->
                        <div class="sidebar-widget-area">
                            <h2 class="title subscribe-title"><i class="fa fa-phone" aria-hidden="true"></i> Téléphone</h2>
                            <div class="widget-content">
                                <a href="tel:+33973226661" style= "font-size: 15px;">09.73.22.66.61</a>
                            </div><br>
                            <h2 class="title subscribe-title"><i class="fa fa-envelope" aria-hidden="true"></i> E-mail</h2>
                            <div class="widget-content">
                                <a href="mailto:info@myespritzen.com" style= "font-size: 15px;">info@myespritzen.com</a>
                            </div>
                        </div>

                        <!-- Widget Area -->
                        <div class="sidebar-widget-area">
                            <div class="widget-content social-widget justify-content-between">
                                <a href="https://www.instagram.com/myespritzen/"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                                <a href="https://www.facebook.com/myespritzen/"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Contact Area End ##### -->

{% endblock %}


